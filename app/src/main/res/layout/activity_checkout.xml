<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B70B0202"
    android:backgroundTint="#B70B0202"
    tools:context=".Checkout">

    <CheckBox
        android:id="@+id/checkbox_apple_pay"
        android:layout_width="267dp"
        android:layout_height="45dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="82dp"
        android:onClick="onCheckboxClicked"
        android:text="Apple Pay"
        android:textColor="#64FFDA"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkoutHeading" />

    <CheckBox
        android:id="@+id/checkbox_paypal"
        android:layout_width="267dp"
        android:layout_height="45dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="106dp"
        android:onClick="onCheckboxClicked"
        android:text="PayPal"
        android:textColor="#64FFDA"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_apple_pay" />

    <CheckBox
        android:id="@+id/checkbox_stripe"
        android:layout_width="267dp"
        android:layout_height="45dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="106dp"
        android:onClick="onCheckboxClicked"
        android:text="Stripe"
        android:textColor="#64FFDA"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_paypal" />

    <TextView
        android:id="@+id/checkoutHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="89dp"
        android:text="Welcome to Checkout"
        android:textColor="#64FFDA"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/payment_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="149dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="149dp"
        android:backgroundTint="#64FFDA"
        android:text="Checkout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_stripe" />

</androidx.constraintlayout.widget.ConstraintLayout>