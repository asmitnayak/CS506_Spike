<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B5222121"
    tools:context=".RestaurantStaff">

    <Button
        android:id="@+id/Update_Orders_Button"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/teal_200"
        android:backgroundTintMode="src_over"
        android:onClick="goToOrders"
        android:text="Manage Orders"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.784"
        app:layout_constraintStart_toEndOf="@+id/Update_Menu_Button"
        app:layout_constraintTop_toBottomOf="@+id/waiter_picture" />

    <Button
        android:id="@+id/Update_Menu_Button"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/teal_200"
        android:backgroundTintMode="src_over"
        android:onClick="goToStaffMenu"
        android:text="Manage Menu"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/waiter_picture" />

    <TextView
        android:id="@+id/Staff_Action_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="sans-serif"
        android:text="Staff Actions"
        android:textAlignment="center"
        android:textColor="@color/teal_200"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/waiter_picture"
        android:layout_width="410dp"
        android:layout_height="273dp"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Staff_Action_Title"
        app:srcCompat="@drawable/restaurant_staff_background" />

</androidx.constraintlayout.widget.ConstraintLayout>