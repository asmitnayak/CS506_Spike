<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="12dp"
    android:textAlignment="center">


    <RelativeLayout
        android:id="@+id/box2"
        android:layout_width="101dp"
        android:layout_height="99dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp">

        <Button
            android:id="@+id/plus"
            style="@style/Widget.MaterialComponents.TimePicker.Button"
            android:layout_width="20dp"
            android:layout_height="29dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="37dp"
            android:layout_marginBottom="33dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="+"
            android:textColor="#040303" />

        <Button
            android:id="@+id/minus"
            style="@style/Widget.MaterialComponents.TimePicker.Button"
            android:layout_width="20dp"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="33dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="-"
            android:textColor="#040303" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="40dp"
            android:layout_toStartOf="@+id/minus"
            android:layout_toEndOf="@+id/plus"
            android:text="0"
            android:textAlignment="center" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/box1"
        android:layout_width="wrap_content"
        android:layout_height="99dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="106dp"
            android:layout_height="82dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/customer_view_background" />

        <TextView
            android:id="@+id/costView"
            android:layout_width="100dp"
            android:layout_height="27dp"
            android:layout_below="@+id/AvailibilityView"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="-29dp"
            android:layout_toEndOf="@+id/imageView2"
            android:text="Cost:" />

        <TextView
            android:id="@+id/AvailibilityView"
            android:layout_width="100dp"
            android:layout_height="27dp"
            android:layout_below="@+id/nameView"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="-2dp"
            android:layout_toEndOf="@+id/imageView2"
            android:text="Available:" />

        <TextView
            android:id="@+id/nameView"
            android:layout_width="100dp"
            android:layout_height="27dp"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="20dp"
            android:layout_toEndOf="@+id/imageView2"
            android:text="Name:" />

        <CheckBox
            android:id="@+id/foodSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="18dp" />

    </RelativeLayout>

</RelativeLayout>